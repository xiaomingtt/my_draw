.userheadlogin {
  width: 100%;
  height: 16vh;
  background-color: #1296db;
  /*垂直居中*/
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.userheadlogin button {
  width: 50vw;
  margin: auto 25vw;
}

.userheadface {
  width: 25vw;
  height: 18vw;
  text-align: center;
  border-radius: 10vw;
  float: left;
}

.userheadface image {
  width: 18vw;
  height: 18vw;
  border-radius: 9vw;
}

.userheadname {
  width: 70vw;
  text-align: left;
  float: left;
  margin-left: 3vw;
}

.userheadname image {
  width: 40rpx;
  height: 40rpx;
}

.userheadnametext {
  font-size: 38rpx;
  line-height: 9vw;
}

.userheadnameimg {
  line-height: 9vw;
}

.usershuaxin {
  position: fixed;
  top: 6vh;
  right: 2vh;
  background-color: rgba(204, 204, 204, 0);
}

.usershuaxin::after {
  /*去除按钮边框*/
  border: none;
}

.usershuaxin image {
  position: fixed;
  width: 40rpx;
  height: 40rpx;
  top: 6vh;
  right: 3vh;
}

.usershuaxin image:active {
  transform: rotate(1080deg);
  transition: all 1s ease;
}

.jiantou {
  float: right;
  margin-right: 3vw;
}

.userviews {
  width: 100vw;
  height: 70vh;
}

.userscrollview {
  width: 100vw;
  height: 70vh;
}

.useranswer {
  width: 46.5vw;
  height: 47vw;
  float: left;
  margin-left: 2vw;
  margin-top: 10rpx;
  border:1rpx solid  #1296db;
}

.usermyimg {
  width: 100%;
  height: 85%;
}

.usermyimg image {
  width: 100%;
  height: 85%;
}

.usermytext {
  width: 100%;
  height: 15%;
  font-size: 32rpx;
  border-top: 1rpx solid #1296db;
  padding:auto 3rpx;
}
.userweidenglu {
  width: 100%;
  height: 10vh;
  line-height: 10vh;
  text-align: center;
}
.usermytext image{
  width:30rpx;
  height: 30rpx;
}
.userweifa{
  width:96%;
  margin:5rpx 2%;
  border-bottom: 1rpx #cbcbcb solid;
  font-size: 30rpx;
}